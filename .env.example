# 시험 페이지 링크 - 녹화 페이지 Instruction 아래 "Open exam" 버튼으로 새 탭 오픈
# 배포 시 jr / int / sr 별로 하나씩 설정 (예: https://acslkorea-jr2026.netlify.app)
NEXT_PUBLIC_EXAM_URL=

# 구글 폼(답안지) 링크 - 녹화 페이지에 "Open answer sheet" 버튼으로 표시
# 비워두면 버튼이 표시되지 않습니다.
NEXT_PUBLIC_GOOGLE_FORM_URL=

# 녹화 비트레이트 (bps). 낮출수록 파일 크기 감소, 화질은 다소 낮아질 수 있습니다.
# 예: 2500000 = 2.5Mbps, 1250000 = 1.25Mbps (용량 약 절반)
# 비워두면 기본값 2.5Mbps 사용
NEXT_PUBLIC_RECORDING_VIDEO_BITRATE=2500000

# Google Drive API (녹화 파일 업로드용) — Drive 전용 키
# 로컬: 서비스 계정 JSON 파일 경로
GOOGLE_APPLICATION_CREDENTIALS=
# Vercel 등 배포: JSON 전체를 한 줄 문자열로 (줄바꿈 제거) 넣기
# GCP_SA_KEY=

# 업로드 대상 폴더 ID (녹화 파일이 저장되는 Drive 폴더)
# ACSL 밑에 Jr, Int, Sr 폴더를 만들었다면, 배포별로 해당 폴더 ID만 넣기
# Jr 배포 → Jr 폴더 ID, Int 배포 → Int 폴더 ID, Sr 배포 → Sr 폴더 ID
# 폴더 ID 확인: Drive에서 폴더 열기 → 주소창 .../folders/ 뒤의 문자열
DRIVE_FOLDER_ID=

# Firebase Admin (API: Firestore/Auth) — Firebase 전용 키
# 로컬: JSON 파일 경로
FIREBASE_APPLICATION_CREDENTIALS=
# Vercel 등 배포: JSON 전체를 한 줄 문자열로 (줄바꿈 제거) Environment Variable에 넣기
# FIREBASE_APPLICATION_CREDENTIALS_JSON=

# Firebase (클라이언트용). .env.local에 실제 값 설정
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
